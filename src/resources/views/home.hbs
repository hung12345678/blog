<div id="carouselExampleControls" class="carousel slide mt-4" data-ride="carousel">
  <div class="carousel-inner">
    <div style="border-radius: 10px" class="carousel-item active slider-item">
      <img style="border-radius: 10px" class="d-block w-100 img-item" src="http://localhost:3000/img/slider3.jpg" alt="First slide">
    </div>
    <div style="border-radius: 10px" class="carousel-item slider-item">
