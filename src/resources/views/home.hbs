    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>



<div class="mt-4">
  <h3>Các Loại Bánh</h3>
  <div class="row">
    {{!-- tham khaor https://handlebarsjs.com/guide/#evaluation-context --}}
    {{#each courses}}
    <div class="col-sm-4 col-lg-3">
      <div class="card card-item">
        <a href="/courses/{{this.slug}}">
          <img src="{{this.image}}" class="card-img-top img-banh" alt="{{this.name}}">
        </a>
        <div class="card-body">
          <a href="/courses/{{this.slug}}">
            <h5 class="card-title">{{this.name}}</h5>
          </a>
          <p class="card-text">{{this.decripton}}</p>

          <div class="d-flex align-items-center">
            <h5>{{this.price}}.000</h5>
            <p>đ/</p>
            <p>{{unit}}</p>
            <a href="/courses/{{this.slug}}" class="ml-auto btn btn-success">Mua Ngay</a>
          </div>

        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>


<script src="http://localhost:3000/javascript/validatior.js"></script>