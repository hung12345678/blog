<div class="mt-4">
    <h3>Sửa khóa học</h3>
{{!-- html chỉ support Get và Post cái ta đang mong muốn là Put va Patch ở đây(sưar) --}}
    <form method="POST" class="mt-4"  action="/courses/{{course._id}}?_method=PUT">
        <div class="mb-3">
            <label for="name" class="form-label">Tên Khóa Học</label>
            <input type="text" class="form-control" value="{{course.name}}" id="exampleInputEmail1" name="name">
        </div>
        <div class="mb-3">
            <label for="decripton" class="form-label">Mô tả khóa học</label>
            <textarea  class="form-control" id="exampleInputEmail1" name="decripton">{{course.decripton}}</textarea>
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Giá Bánh</label>
            <input type="text" class="form-control" value="{{course.price}}" id="exampleInputEmail1" name="price">
        </div>
         <div class="mb-3">
            <label for="unit" class="form-label">Đơn Vị Tính</label>
            <input type="text" class="form-control" value="{{course.unit}}" id="exampleInputEmail1" name="unit">
        </div>
        <div class="mb-3">
            <label for="videoId" class="form-label">Video ID</label>
            <input type="text" class="form-control" value="{{course.videoId}}" id="exampleInputEmail1" name="videoId">
        </div>
        <div class="mb-3">
            <label for="image" cnlass="form-label">Hình ảnh</label>
            <input type="text" class="form-control" value="{{course.image}}" id="exampleInputEmail1" name="image">
        </div>
         <div class="mb-3">
            <label for="imageitem" class="form-label">Hình ảnh Phụ</label>
            <input type="text" class="form-control" value="{{course.imageitem}}" id="exampleInputEmail1" name="imageitem">
        </div>
        <div class="mb-3">
            <label for="imageitem1" class="form-label">Hình ảnh Phụ 1</label>
            <input type="text" class="form-control" value="{{course.imageitem1}}" id="exampleInputEmail1" name="imageitem1">
        </div>
        <div class="mb-3">
            <label for="imageitem2" class="form-label">Hình ảnh Phụ 2</label>
            <input type="text" class="form-control" value="{{course.imageitem2}}" id="exampleInputEmail1" name="imageitem2">
        </div>
       <div class="mb-3">
            <label for="imageitem3" class="form-label">Hình ảnh Phụ 3</label>
            <input type="text" class="form-control" value="{{course.imageitem3}}" id="exampleInputEmail1" name="imageitem3">
        </div>
       <div class="mb-3">
            <label for="imageitem4" class="form-label">Hình ảnh Phụ 4</label>
            <input type="text" class="form-control" value="{{course.imageitem4}}" id="exampleInputEmail1" name="imageitem4">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>