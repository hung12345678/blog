<div class="mt-4">
   
    <h3 style="font-weight: bold;" class="text-center text-info">Sản Phẩm</h3>
    <div class="row">
        {{!-- tham khaor https://handlebarsjs.com/guide/#evaluation-context --}}
        {{#each courses}}
        <div class="col-sm-4 col-lg-3">
            <div class="card card-item">
                <a href="/courses/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top img-banh" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.decripton}}</p>

                    <div class="d-flex align-items-center">
                        <h5>{{this.price}}.000</h5>
                        <p>đ/</p>
                        <p>{{unit}}</p>
                        <a href="/courses/{{this.slug}}" class="ml-auto btn btn-success">Đặt Hàng</a>
                    </div>

                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>